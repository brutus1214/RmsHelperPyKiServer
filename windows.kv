# there are two screens
windowManager:
    loginWindow:
    serverWindow:

# GUI for the server window
<serverWindow>:
    orientation: "vertical"
    pos: 0, root.height - 30
    spacing: 10

    BoxLayout:
        size_hint_y: 2.1
        height: "40dp"
        Label:
            id: rmshelper_label
            text: "RMSHelper Server Running!"
            font_size: 25
            halign: 'center'
            size_hint_y: 0.9
            height: self.texture_size[1]
            padding_y: 15

    BoxLayout:
        size_hint_y: 1.7
        height: "40dp"
        Label:
            text: "Server"
            icon_right: "account"
            size_hint_x: 0
            font_size: 15
            pos_hint: {"center_x": 0.1}

        Label:
            id: dbname
            text: "Database"
            icon_right: "account"
            size_hint_x: None
            font_size: 15
            pos_hint: {"center_x": 0.4}

        Label:
            id: ipaddress
            text: "IP Address"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 15
            pos_hint: {"center_x": 0.7}

    BoxLayout:
        size_hint_y: 1.6
        height: "40dp"
        Label:
            id: msg_label
            text: "Message"
            size_hint_x: None
            width: 200
            font_size: 15
            pos_hint: {"center_x": 0.7}

    ConnectionList:
        rv_layout: layout
        id: layout
        size_hint_y: 0.7
        viewclass: 'Button'
        RecycleBoxLayout:
            # This layout is used to hold the Recycle widgets
            default_size: None, dp(48)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height   # To scroll you need to set the layout height.
            orientation: 'vertical'

    BoxLayout:
        size_hint_y: 0.1
        height: "40dp"
        Button:
            text: "EXIT RMSHelperServer"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.exit()

# GUI for the login window
<loginWindow>:
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 10
        spacing: 5
        orientation: 'vertical'

        MDLabel:
            id: rmshelper_label
            text: "RMSHelper Server"
            font_size: 25
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: server
            hint_text: "server"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 15
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: dbname
            hint_text: "database"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 15
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 15
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "LOG IN"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.rmshelper_server_connect()

        MDRoundFlatButton:
            text: "CLEAR"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.clear()

        MDLabel:
            id: msg_label
            text: "Message"
            font_size: 10
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15


