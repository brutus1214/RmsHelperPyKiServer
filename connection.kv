Screen:

<connectionWindow>:
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 10
        spacing: 5
        orientation: 'vertical'

        MDLabel:
            id: rmshelper_label
            text: "RMSHelper Server Connection"
            font_size: 25
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: server
            hint_text: "server"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 15
            pos_hint: {"center_x": 0.5}

        MDRoundFlatButton:
            text: "CLEAR"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.clear()

        MDLabel:
            id: msg_label
            text: "Message"
            font_size: 10
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15